{
  "name": "ltcg-v2",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n convex,web -c blue,magenta \"bun run dev:convex\" \"bun run dev:web\"",
    "dev:convex": "convex dev",
    "dev:web": "cd apps/web && bun run dev",
    "test": "vitest",
    "test:once": "vitest run",
    "lint": "echo \"lint: no-op\""
  },
  "dependencies": {
    "@lunchtable-tcg/cards": "workspace:*",
    "@lunchtable-tcg/engine": "workspace:*",
    "@lunchtable-tcg/guilds": "workspace:*",
    "@lunchtable-tcg/match": "workspace:*",
    "@lunchtable-tcg/story": "workspace:*",
    "@sentry/node": "^10.38.0",
    "convex": "^1.31.6",
    "posthog-node": "^5.24.15"
  },
  "devDependencies": {
    "@vercel/blob": "^2.2.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18",
    "@types/bun": "latest"
  },
  "module": "index.ts"
}
