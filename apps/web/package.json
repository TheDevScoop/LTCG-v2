{
  "name": "@lunchtable-tcg/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "elizaos": {
    "kind": "app",
    "app": {
      "displayName": "LunchTable: School of Hard Knocks",
      "category": "game",
      "launchType": "connect",
      "launchUrl": "https://lunchtable.app",
      "capabilities": ["observe", "control", "story-mode", "pvp", "spectate", "chat"],
      "minPlayers": 1,
      "maxPlayers": 2,
      "viewer": {
        "url": "https://lunchtable.app",
        "embedParams": {
          "embedded": "true",
          "mode": "play"
        },
        "postMessageAuth": true,
        "sandbox": "allow-scripts allow-same-origin allow-popups allow-forms"
      }
    }
  },
  "scripts": {
    "dev": "vite --port 3334",
    "build": "tsc -b && vite build",
    "build:vercel": "vite build",
    "preview": "vite preview --port 3334",
    "type-check": "tsc --noEmit",
    "avatars:standardize": "bun run scripts/standardize-signup-avatars.ts",
    "avatars:upload": "bun run scripts/upload-signup-avatars-to-blob.ts",
    "upload:soundtrack": "bun run scripts/migrate-soundtrack-to-blob.ts"
  },
  "dependencies": {
    "@capacitor/core": "^8.1.0",
    "@discord/embedded-app-sdk": "^2.4.0",
    "@privy-io/react-auth": "^3.12.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@sentry/react": "^9.41.0",
    "@sentry/vite-plugin": "^4.9.1",
    "@telegram-apps/bridge": "^2.11.0",
    "@vercel/blob": "^2.2.0",
    "clsx": "^2.1.1",
    "convex": "^1.31.6",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.562.0",
    "posthog-js": "^1.347.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.6.1",
    "sonner": "^2.0.0",
    "tailwind-merge": "^3.3.0",
    "three": "^0.183.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/three": "^0.183.0",
    "@vercel/node": "^5.6.3",
    "@vitejs/plugin-react": "^4.5.2",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.8.0",
    "vite": "^6.3.0"
  }
}
