{
  "name": "@lunchtable-tcg/plugin-ltcg",
  "version": "0.1.0",
  "description": "ElizaOS-compatible plugin that enables AI agents to play LunchTable TCG stories and quick duels",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "keywords": ["plugin", "elizaos", "game", "tcg"],
  "homepage": "https://lunchtable.app",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@elizaos/core": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.0.0"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "LTCG_API_URL": {
        "type": "string",
        "description": "Convex site URL (e.g. https://scintillating-mongoose-458.convex.site)",
        "required": true
      },
      "LTCG_API_KEY": {
        "type": "string",
        "description": "Agent API key from /api/agent/register (starts with ltcg_)",
        "required": true,
        "sensitive": true
      },
      "LTCG_SOUNDTRACK_API_URL": {
        "type": "string",
        "description": "Optional web endpoint that serves soundtrack JSON (e.g. https://app.example.com/api/soundtrack)",
        "required": false
      }
    }
  },
  "elizaos": {
    "kind": "app",
    "app": {
      "displayName": "LunchTable: School of Hard Knocks",
      "category": "game",
      "launchType": "connect",
      "launchUrl": "https://lunchtable.app",
      "icon": "https://lunchtable.app/favicon.svg",
      "capabilities": ["observe", "control", "story-mode", "pvp", "spectate", "chat"],
      "minPlayers": 1,
      "maxPlayers": 2,
      "viewer": {
        "url": "https://lunchtable.app",
        "embedParams": {
          "embedded": "true",
          "mode": "play"
        },
        "postMessageAuth": true,
        "sandbox": "allow-scripts allow-same-origin allow-popups allow-forms"
      }
    }
  }
}
