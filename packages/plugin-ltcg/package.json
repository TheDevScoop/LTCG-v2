{
  "name": "@lunchtable/plugin-ltcg",
  "version": "0.1.0",
  "description": "ElizaOS-compatible plugin that enables AI agents to play LunchTable TCG stories and quick duels",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "homepage": "https://lunchtable.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dexploarer/LTCG-v2",
    "directory": "packages/plugin-ltcg"
  },
  "keywords": ["plugin", "elizaos", "game", "tcg"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "elizaos.plugin.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@elizaos/core": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.0.0"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "LTCG_API_URL": {
        "type": "string",
        "description": "Convex site URL (e.g. https://scintillating-mongoose-458.convex.site)",
        "required": true
      },
      "LTCG_API_KEY": {
        "type": "string",
        "description": "Agent API key from /api/agent/register (starts with ltcg_)",
        "required": true,
        "sensitive": true
      },
      "LTCG_SOUNDTRACK_API_URL": {
        "type": "string",
        "description": "Optional web endpoint that serves soundtrack JSON (e.g. https://app.example.com/api/soundtrack)",
        "required": false
      }
    }
  },
  "elizaos": {
    "kind": "plugin",
    "displayName": "LunchTable TCG Plugin",
    "configKeys": ["LTCG_API_URL", "LTCG_API_KEY", "LTCG_SOUNDTRACK_API_URL"]
  }
}
